<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Employees" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/garnet</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/midnight_blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="employeeSelection">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10sp</item>
        <item name="fontFamily">@fonts/Roboto</item>
        <item name="cornerRadius">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Forms">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">15sp</item>
        <item name="fontFamily">@fonts/Roboto</item>
        <item name="cornerRadius">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>